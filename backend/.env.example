# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection (Production Database)
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration (Authentication)
# Generate a strong random secret for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Cloudinary Configuration (File Upload Service)
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (CORS Configuration)
# Update this with your Vercel frontend URL after deployment
FRONTEND_URL=https://your-frontend-url.vercel.app
